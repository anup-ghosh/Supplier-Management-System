<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="supplier_reject_wizard" model="ir.ui.view">
            <field name="name">supplier.reject.wizard</field>
            <field name="model">supplier.reject.wizard</field>
            <field name="arch" type="xml">
                <form string="Reject Supplier">
                    <group>
                        <field name="reason"/>
                    </group>
                    <footer>
                        <button name="action_reject_supplier" string="Confirm" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>